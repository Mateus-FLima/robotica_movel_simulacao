<launch>
  <arg name="use_sim_time" default="true"/>
  <param name="use_sim_time" value="$(arg use_sim_time)"/>

  <!-- Mapa estático 
  <node pkg="map_server" type="map_server" name="map_server" args="$(find lidar_p3dx)/maps/corredor_map.yaml"/>-->
  <node pkg="map_server" type="map_server" name="map_server" args="$(find lidar_p3dx)/maps/corredor_map_obstaculo.yaml"/>
  
  
  <!-- AMCL -->
  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <param name="odom_frame_id" value="odom"/>
    <param name="base_frame_id" value="base_link"/>
    <param name="global_frame_id" value="map"/>
    <remap from="scan" to="/p3dx/laser/scan"/>
    <rosparam file="$(find lidar_p3dx)/config/amcl_params.yaml" command="load"/>
  </node>
  
  <!-- RViz com configuração carregada -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find lidar_p3dx)/config/rviz_config.rviz"/>

</launch>
